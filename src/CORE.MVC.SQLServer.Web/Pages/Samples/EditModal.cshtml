@page
@using Microsoft.AspNetCore.Mvc.Localization
@using CORE.MVC.SQLServer.Localization
@using CORE.MVC.SQLServer.Web.Pages.Samples
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using CORE.MVC.SQLServer.Samples;
@using System.Globalization
@inject IHtmlLocalizer<SQLServerResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Samples/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="Sample.Name"/>

            <abp-input asp-for="Sample.Date1" value="@(Model.Sample.Date1?.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="Sample.Year"/>

            <abp-input asp-for="Sample.Code"/>

            <abp-input asp-for="Sample.Email"/>

            <abp-input asp-for="Sample.IsConfirm"/>

            <abp-input asp-for="Sample.UserId"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>