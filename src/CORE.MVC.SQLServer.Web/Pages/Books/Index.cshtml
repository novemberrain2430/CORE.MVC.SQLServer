@page
@using CORE.MVC.SQLServer.Web.Pages.Books
@using CORE.MVC.SQLServer.Localization
@model CORE.MVC.SQLServer.Web.Pages.Books.IndexModel
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inject IStringLocalizer<SQLServerResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.MenuItemName = "BooksStore";
}
@section scripts
    {
    <abp-script src="/Pages/Books/Index.js" />
}
    <abp-card>
        <abp-card-header>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-card-title>@L["Books"]</abp-card-title>
                </abp-column>
                <abp-column size-md="_6" class="text-right">
                    <abp-button id="NewBookButton"
                            text="@L["NewBook"].Value"
                            icon="plus"
                            button-type="Primary" />
                </abp-column>
            </abp-row>
        </abp-card-header>
        <abp-card-body>
            <abp-table striped-rows="true" id="BooksTable"></abp-table>
        </abp-card-body>
    </abp-card>
